class Settings:
    # This is the settings class to store all the settings for the alien invasion game
    def __init__(self):
        # Initialize the games settings.
        # Screen settings.
        self.screen_width = 1200
        self.screen_height = 800
        # The following color scheme is chosen through RGB coloring format.
        self.bg_color = (0, 0, 0)

        # Ship settings.
        self.ship_speed = 1.5
